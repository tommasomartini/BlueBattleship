<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btActBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_act_bluetooth" />

    <Button
        android:id="@+id/btDeactBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_deact_bluetooth" />

    <Button
        android:id="@+id/btSearchDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_search_bt_devices" />

    <Button
        android:id="@+id/startCampo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vai al Campo" />

    <TextView
        android:id="@+id/vvv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lvDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>